@model ProjectDTO
@{
    ViewData["Title"] = "Yeni Proje";
}

<nav class="mb-3" aria-label="breadcrumb">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="#!">Page 1</a></li>
        <li class="breadcrumb-item"><a href="#!">Page 2</a></li>
        <li class="breadcrumb-item active">Default</li>
    </ol>
</nav>
<h2 class="mb-4">Yeni proje oluştur</h2>
<div class="row">
    <div class="col-xl-9">
        <form class="row g-3 mb-6" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-sm-6 col-md-8">
                <div class="form-floating">
                    <input asp-for="Title" class="form-control" id="floatingInputGrid" type="text" placeholder="Project title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <label for="floatingInputGrid">Proje Başlığı</label>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">
                <div class="form-floating">
                    <select asp-for="Privacy" class="form-select" id="floatingSelectPrivacy">
                        @foreach(var privacy in Enum.GetValues(typeof(Enumeration.Privacy)))
                        {
                            <option value="@((int)privacy)">@privacy</option>
                        }
                    </select>
                    <span asp-validation-for="Privacy" class="text-danger"></span>
                    <label for="floatingSelectPrivacy">Gizlilik</label>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">
                <div class="form-floating">
                    <select asp-for="Status" class="form-select" id="floatingSelectAdmin">
                        @foreach(var status in Enum.GetValues(typeof(Enumeration.ProjectStatus)))
                        {
                            <option value="@((int)status)">@status</option>
                        }
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                    <label for="floatingSelectAdmin">Status</label>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">
                <div class="flatpickr-input-container">
                    <div class="form-floating">
                        <input asp-for="StartDate" class="form-control datetimepicker" id="floatingInputStartDate" type="text" placeholder="end date" data-options='{"disableMobile":true}' />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                        <label class="ps-6" for="floatingInputStartDate">Başlangıç Tarihi</label><span class="uil uil-calendar-alt flatpickr-icon text-body-tertiary"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">
                <div class="flatpickr-input-container">
                    <div class="form-floating">
                        <input asp-for="Deadline" class="form-control datetimepicker" id="floatingInputDeadline" type="text" placeholder="deadline" data-options='{"disableMobile":true}' />
                        <span asp-validation-for="Deadline" class="text-danger"></span>
                        <label class="ps-6" for="floatingInputDeadline">Son Teslim Tarihi</label><span class="uil uil-calendar-alt flatpickr-icon text-body-tertiary"></span>
                    </div>
                </div>
            </div>
            <div class="col-12 gy-6">
                <div class="form-floating">
                    <textarea asp-for="Description" class="form-control" id="floatingProjectOverview" placeholder="Leave a comment here" style="height: 100px"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <label for="floatingProjectOverview">Açıklama</label>
                </div>
            </div>
            <div class="col-md-6 gy-md-6">
                <div class="form-floating">
                    <input asp-for="Budget" class="form-control" id="floatingInputBudget" type="text" placeholder="Budget" />
                    <span asp-validation-for="Budget" class="text-danger"></span>
                    <label for="floatingInputBudget">Bütçe</label>
                </div>
            </div>
            <input asp-for="OrganizationId" type="hidden" value="@Guid.Parse(User.FindFirst("organizationId")?.Value!)" />
            <div class="col-12 gy-6">
                <div class="row g-3 justify-content-end">
                    <div class="col-auto">
                        <a asp-action="Index" class="btn btn-phoenix-primary px-5">Geri</a>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary px-5 px-sm-15">Oluştur</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


